# Development Dockerfile for C++ Applications
# Includes debugging tools and hot-reload support

FROM ubuntu:22.04

# Avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install development dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    ninja-build \
    git \
    gdb \
    valgrind \
    clang-format \
    clang-tidy \
    cppcheck \
    python3-pip \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Conan package manager
RUN pip3 install --no-cache-dir conan

WORKDIR /app

# Copy application files
COPY . .

# Expose port
EXPOSE 8080

# Development build and run
CMD ["bash", "-c", "conan install . --output-folder=build --build=missing && \
     cmake -S . -B build -G Ninja -DCMAKE_BUILD_TYPE=Debug -DCMAKE_TOOLCHAIN_FILE=build/conan_toolchain.cmake && \
     cmake --build build && \
     ./build/bin/app"]
