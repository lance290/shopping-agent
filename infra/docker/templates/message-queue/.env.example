# Queue Type: kafka, rabbitmq, or redis
QUEUE_TYPE=rabbitmq

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=tasks

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672/
RABBITMQ_USER=admin
RABBITMQ_PASS=password
RABBITMQ_QUEUE=tasks

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_STREAM=tasks

# Server Configuration
PORT=8080
API_PORT=8080

# Ports (for docker-compose)
ZOOKEEPER_PORT=2181
KAFKA_PORT=9092
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
REDIS_PORT=6379
